<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_as_teacher_student"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/choose_entity_screen_sign_in_as_a_teacher_or_student"
        android:layout_marginBottom="40dp"
        android:textSize="15sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_as_school"
        android:layout_above="@+id/choose_entity_screen_sign_in_as_a_teacher_or_student"
        android:layout_centerHorizontal="true"
        android:id="@+id/choose_entity_screen_sign_in_as_a_school"
        android:layout_marginBottom="40dp"
        android:textSize="15sp"
        android:textColor="#FFFFFF" />

</RelativeLayout>