<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_shifted">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/school"
        android:id="@+id/school_sign_in_screen_school_label"
        android:textSize="15sp"
        android:layout_above="@+id/school_sign_in_screen_password_label"
        android:layout_alignStart="@+id/school_sign_in_screen_password_label"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:id="@+id/school_sign_in_screen_password_label"
        android:layout_marginStart="40dp"
        android:textSize="15sp"
        android:layout_above="@+id/school_sign_in_screen_sign_in_label"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:id="@+id/school_sign_in_screen_sign_in_label"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:layout_above="@+id/school_sign_in_linear_layout"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/school_sign_in_linear_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_account"
            android:id="@+id/school_sign_in_screen_no_account_label"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_us"
            android:id="@+id/school_sign_in_screen_contact_us_label"
            android:textSize="15sp"
            android:textColor="#0000FF"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/school_sign_in_screen_school_spinner"
        android:layout_alignStart="@+id/school_sign_in_screen_password_edit_text"
        android:layout_alignBottom="@+id/school_sign_in_screen_school_label"/>

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/school_sign_in_screen_password_edit_text"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/school_sign_in_screen_password_label"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp" />

</RelativeLayout>